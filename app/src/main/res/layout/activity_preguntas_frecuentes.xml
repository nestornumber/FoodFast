<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodfast_background"
    tools:context=".PreguntasFrecuentesActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agbalumo_regular_style"
        android:text="Preguntas Frecuentes"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/font_size_huge"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/cabin_semibold_style"
        android:text="¿Cómo puedo buscar una receta específica en la aplicación?"
        android:textColor="@color/text_blue"

        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin_regular"
        android:text="Para buscar una receta, simplemente haz clic en la opción Buscar en la barra de navegación."
        android:textColor="@color/text_blue"

        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin_semibold_style"
        android:text="¿Cómo añado una nueva receta a la aplicación?"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin_regular"
        android:text="Para añadir una nueva receta, selecciona la opción Añadir en la barra de navegación"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin_semibold_style"
        android:text="¿Cómo puedo proporcionar retroalimentación sobre la aplicación?"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin_regular"
        android:text="Nos encantaría recibir tus comentarios. Dirígete a la sección Ajustes y selecciona Contáctanos, ahí encontrarás formas de contactarnos."
        android:textColor="@color/text_blue"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>